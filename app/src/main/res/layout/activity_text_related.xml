<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/introduction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:gravity="center"
                android:padding="15dp"
                android:text="@string/title_trec"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/introduction"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_white"
                android:layout_width="310dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:background="@drawable/colors_btn"
                android:onClick="textRecognitionEvent"
                android:text="Text-Document Recognition"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_bank_card"
                android:layout_width="310dp"
                android:layout_height="36dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/colors_btn"
                android:gravity="center"
                android:onClick="textRecognitionEvent"
                android:text="Bank Card Recognition"
                android:textAllCaps="false"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/btn_general_card"
                android:layout_width="310dp"
                android:layout_height="36dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/colors_btn"
                android:gravity="center"
                android:onClick="textRecognitionEvent"
                android:text="General Card Recognition"
                android:textAllCaps="false"
                android:textColor="#ffffff" />

        </LinearLayout>

    </LinearLayout>
</layout>